<%= link_to cocktail_path(cocktail) do %>
  <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
  <%= cl_image_tag cocktail.photo.path, width: 350, height: 200, crop: :fill %>

    <div class="card-description">
      <h2><%= cocktail.name %></h2>
    </div>
  </div>
<% end %>
