

<div class="text-center">
  <h1>Cocktails#show</h1>
  <h2><%= @cocktail.name%></h2>
  <div class="container">
    <div class="row">
     <% if @cocktail.photo? %>
      <%= cl_image_tag @cocktail.photo.path, width: 500, height: 300, crop: :fill %>
      <% end %>
      <div class="col-xs-12 col-sm-12">

          <% @cocktail.doses.each do |dose|%>
          <%= dose.description%>
          <%= dose.ingredient.name%>
          <p><%= link_to "delete dose", cocktail_dose_path(@cocktail, dose), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-primary" %>
          <% end %></p>
          <%= link_to "add new dose", new_cocktail_dose_path(@cocktail),class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>


